<view class="player-container" style="background:url({{picUrl}}) center/cover no-repeat"></view>
<view class="player-mask"></view>


<view class="player-info">
  <view class="player-disc {{isPlaying?'play': ''}}">
    <image  class="player-img rotation {{isPlaying?'':'rotation-paused'}}" src="{{picUrl}}"></image>
  </view>
</view>

<view class="control">
  <text class="iconfont icon-shangyishoushangyige"></text>
  <text class="iconfont {{isPlaying?'icon-zanting':'icon-bofang'}}" bindtap="togglePlaying" ></text>
  <text class="iconfont icon-xiayigexiayishou"></text>
</view>
